*
  margin 0
  padding 0

html, body
  height 100%

html
  font-size 10px
  background url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1587097424658&di=0ca8ec82cbecfd41b92012d92972d948&imgtype=0&src=http%3A%2F%2Fbbs.jooyoo.net%2Fattachment%2FMon_0905%2F24_65548_2835f8eaa933ff6.jpg) bottom center
  background-size 100%

.keys
  display -webkit-flex
  display flex
  min-height 100vh
  align-items center
  justify-content center
  .key
    margin 1rem
    border .4rem solid #000
    border-radius 0.5rem
    font-size 1.5rem
    padding 1rem 0.5rem
    width 10rem
    text-align center
    color white
    background rgba(0,0,0,.4)
    text-shadow 0 0 .5rem black
    transition all .07s ease
    div
      display block
      font-size 4rem
    .sound
      font-size 1.2rem
      text-transform uppercase
      letter-spacing 0.1rem
      color #ffc600
  .playing
    border-color #ffc600



